#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <locale.h>

int main()
{
	setlocale(0, "russian");
	FILE* f, * g;
	f = fopen("in_bin.txt", "w+");
	int a, b, n, i, s;
	long offset=4;
	srand((unsigned)time_t(NULL));
	puts("Введите n:");
	scanf("%d", &n);
	for (i = 1; i <= n; i++)
	{
		a = rand() % 100 - 50;
		fwrite(&a, sizeof(a), 1, f);
		printf("%5d", a);
	}
	printf("\n");
	rewind(f);
	i = 0;
	if (n % 2 == 1) n = n + 1;
	while (i!=n/2)
	{
		fseek(f,-offset, 2);
		fread(&a, sizeof(a), 1, f);
		fseek(f, offset, 0);
		fread(&a, sizeof(a), 1, f);
		offset = offset + 4;
		i++;
	}
	fclose(f);
	fclose(g);
	return 0;
}
